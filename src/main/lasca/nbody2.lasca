def go(bodies, i, pxyz) = {
  body = bodies[i];
  updatedPs = [
    pxyz(0) + body.vx * body.mass,
    pxyz(1) + body.vy * body.mass,
    pxyz(2) + body.vz * body.mass
  ];
  if i == 0 then updatedPs else go(bodies, i - 1, updatedPs)
}
