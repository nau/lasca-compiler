def squared(x, y, z) = x * x + y * y + z * z

def energyInner(bodies, from, to) = {
  dx = from.x - to.x;
  dy = from.y - to.y;
  dz = from.z - to.z;
  distance = sqrt(squared(dx, dy, dz));
  from.mass * to.mass / distance;
}

